FROM python:3.12

# Cài build deps và MS ODBC driver
RUN apt-get update && apt-get install -y \
    curl gnupg2 lsb-release apt-transport-https ca-certificates \
    build-essential unixodbc-dev libpq-dev \
    && mkdir -p /etc/apt/trusted.gpg.d/ \
    && curl https://packages.microsoft.com/keys/microsoft.asc | gpg --dearmor > /etc/apt/trusted.gpg.d/microsoft.gpg \
    && curl https://packages.microsoft.com/config/debian/12/prod.list > /etc/apt/sources.list.d/mssql-release.list \
    && apt-get update \
    && ACCEPT_EULA=Y apt-get install -y msodbcsql17 mssql-tools18 \
    && ln -sfn /opt/mssql-tools18/bin/sqlcmd /usr/bin/sqlcmd \
    && ln -sfn /opt/mssql-tools18/bin/bcp /usr/bin/bcp \
    && apt-get clean \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /app

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY . .

EXPOSE 2925

CMD ["uvicorn", "app.main:app", "--host", "0.0.0.0", "--port", "2925"]
